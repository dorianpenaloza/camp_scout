	<%= form_tag("/search", method: :get, class: "navbar-form") do  %>
  <%= text_field_tag :search, params[:search], placeholder: "Search by City or Zip", class: "form-control" %>
  <%= select_tag :miles, options_for_select([["Within 25 miles", "25"], ["Within 50 miles", "50"], ["Within 100 miles", "100"], ["Within 200 miles", "200"]]), class: "form-control" %>

  <%= submit_tag "Find Camps", name: nil, :class => "btn btn-success" %>

<% end %>