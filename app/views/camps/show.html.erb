
<div>
 <%# @camps.each do |camp| %>
<p>
  <strong>Name:</strong>
  <%= @camp.name %>
</p>

<p>
  <strong>Weeks:</strong>
  <%= @camp.weeks %>
</p>

<p>
  <strong>Cost:</strong>
  <%= @camp.cost %>
</p>

<p>
  <strong>Telephone:</strong>
  <a href=tel:<%= @camp.telephone %> name=tel:<%= @camp.telephone %> > <%= @camp.telephone %> </a>
</p>

<p>
  <strong>Website:</strong>
  <a href=<%= @camp.website %> ><%= @camp.website %></a>
</p>

<p>
  <strong>Address:</strong>
  <%= @camp.address %>
</p>

<p>

<%= form_tag(action: "add_to_compare") do %>
  <%= hidden_field :camp_id, value: @camp.id %>

<%= submit_tag "Add to comparison cart" %>
<% end %>

</p>

</div>

