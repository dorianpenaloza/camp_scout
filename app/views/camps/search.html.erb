<div class="col-md-10 col-md-offset-1">
  <h2>
    <%= "Camps near #{params[:search].titleize}" %>
  </h2>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Weeks</th>
      <th>Cost</th>
      <th>Distance</th>

      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @camps.each do |f| %>
        <tr>
          <td><%= link_to f.name, camp_path(f), method: "get" %></td>
          <td><%= f.weeks %></td>
          <td><%= f.cost %></td>
          <td><strong><%= f.distance.round(2) %></strong><%= "miles" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
