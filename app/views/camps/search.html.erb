<body id="table-body">
<section id="table">
  <h1 class="text-center"><%= link_to 'Camp Scout', root_path %></h1><br>
  <div class="container search-table">
    <div class="table-responsive">
      <div class="col-md-10 col-md-offset-1">
          <h3><%= "Camps near #{params[:search].titleize}" %></h3>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Name</th>
            <th>Distance</th>
          </tr>
        </thead>
          <tbody>
            <% @camps.each do |f| %>
              <tr>
                <td><%= link_to f.name, camp_path(f), method: "get" %></td>
                <td><strong><%= f.distance.round(2) %></strong><%= "miles" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div> 
<%= render "/layouts/search_bar" %>
</section>
<section id="gmap">
  <div style='width: 95%; margin: 0 auto;'>
    <div id="map" class="google-maps"><%= render "gmap" %></div>
  </div>
</section>
</body>