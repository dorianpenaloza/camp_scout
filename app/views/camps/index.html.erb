<p id="notice"><%= notice %></p>

<h1>CampScout</h1>

<div style='width: 95%; margin: 0 auto;'>
  <div id="map" style='width: 95%; height: 600px; margin: 0 auto;'>
<%= render "gmap" %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @camps.each do |camp| %>
      <tr>
        <td><%= camp.name %></td>
        <td><%= camp.address %></td>

        <td><%= link_to 'Show', camp %></td>
        <td><%= link_to 'Edit', edit_camp_path(camp) %></td>
        <td><%= link_to 'Destroy', camp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <br>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Camp', new_camp_path %>


